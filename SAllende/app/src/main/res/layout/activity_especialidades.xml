<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.varandan.sallende.cobertura">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Alergia e Inmunologia"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:clickable="true"
        android:background="#2e2d92"
        android:textColor="#f8f7ff"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Anatomia patológica"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:clickable="true"
        android:textColor="#2e2d92"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Anestesiología"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:clickable="true"
        android:background="#2e2d92"
        android:textColor="#f8f7ff"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Cardiología"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:clickable="true"
        android:textColor="#2e2d92"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Cirugís cardiovascular"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:clickable="true"
        android:background="#2e2d92"
        android:textColor="#f8f7ff"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Cirugía de cabeza y cuello"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:clickable="true"
        android:textColor="#2e2d92"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Cirugía de torax"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:clickable="true"
        android:background="#2e2d92"
        android:textColor="#f8f7ff"

        />

</LinearLayout>

