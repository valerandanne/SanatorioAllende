<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:clickable="true"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.5"
        android:text="Buscar por Especialidad"
        android:layout_marginRight="1.5dp"
        android:background="#2e2d92"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:typeface="normal"
        android:textSize="15dp"
        android:id="@+id/button_nueva"
        android:onClick="clickEspecialidad"
        />
    <Button
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:clickable="true"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.5"
        android:text="Buscar por Sucursal"
        android:background="#2e2d92"
        android:textColor="#ffffff"
        android:singleLine="false"
        android:textSize="15dp"
        android:textStyle="bold"
        android:typeface="normal"
        android:layout_marginLeft="1.5dp"
        android:id="@+id/button_cerro"
        android:onClick="clickSucursal"
        />
</LinearLayout>